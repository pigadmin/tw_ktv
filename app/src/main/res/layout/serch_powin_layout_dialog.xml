<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <TextView
      android:id="@+id/text_type_1"
      android:text="注 音"
      android:textSize="13sp"
      android:padding="5dp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:gravity="center"
      android:textColor="@drawable/selected_btn_textcolor"
      android:drawableRight="@mipmap/middle_triangle_2"
      android:layout_gravity="center"
      android:background="@color/viewfinder_mask"
      android:layout_width="50dp"
      android:layout_height="30dp" />

    <View
        android:background="@mipmap/xian_1"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="1px"/>

  <TextView
      android:id="@+id/text_type_2"
      android:text="拼 音"
      android:padding="5dp"
      android:textSize="13sp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:gravity="center"
      android:textColor="@drawable/selected_btn_textcolor"
      android:background="@color/viewfinder_mask"
      android:layout_gravity="center"
      android:layout_width="50dp"
      android:layout_height="30dp" />

  <View
      android:background="@mipmap/xian_1"
      android:layout_gravity="center"
      android:layout_marginLeft="3dp"
      android:layout_marginRight="3dp"
      android:layout_width="wrap_content"
      android:layout_height="1px"/>

  <TextView
      android:id="@+id/text_type_3"
      android:text="数 字"
      android:padding="5dp"
      android:textSize="13sp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:gravity="center"
      android:textColor="@drawable/selected_btn_textcolor"
      android:background="@color/viewfinder_mask"
      android:layout_gravity="center"
      android:layout_width="50dp"
      android:layout_height="30dp" />

  <View
      android:background="@mipmap/xian_1"
      android:layout_gravity="center"
      android:layout_marginLeft="3dp"
      android:layout_marginRight="3dp"
      android:layout_width="wrap_content"
      android:layout_height="1px"/>

  <TextView
      android:id="@+id/text_type_4"
      android:text="越 南"
      android:padding="5dp"
      android:textSize="13sp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:gravity="center"
      android:textColor="@drawable/selected_btn_textcolor"
      android:background="@color/viewfinder_mask"
      android:layout_gravity="center"
      android:layout_width="50dp"
      android:layout_height="30dp" />

  <View
      android:background="@mipmap/xian_1"
      android:layout_gravity="center"
      android:layout_marginLeft="3dp"
      android:layout_marginRight="3dp"
      android:layout_width="wrap_content"
      android:layout_height="1px"/>

  <TextView
      android:id="@+id/text_type_5"
      android:text="日 文"
      android:padding="5dp"
      android:textSize="13sp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:gravity="center"
      android:textColor="@drawable/selected_btn_textcolor"
      android:background="@color/viewfinder_mask"
      android:layout_gravity="center"
      android:layout_width="50dp"
      android:layout_height="30dp" />
</LinearLayout>
