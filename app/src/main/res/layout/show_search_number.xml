<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/suxue_1"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/seach_edt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:digits="0123456789"
            android:hint=""
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/secector_edittext_cursor_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sure_btn"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:background="@drawable/sector_sure_btn"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sector_edittext_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/info_1_tvw"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:text="编号"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/info_2_tvw"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:text="歌手"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/info_3_tvw"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:text="歌曲"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>