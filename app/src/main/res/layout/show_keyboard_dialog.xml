<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/suxue_1"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="15dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:listSelector="@drawable/grid_item_bg"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/serach_ivw"
            android:layout_width="30dp"
            android:src="@drawable/sector_keyboard"
            android:focusable="true"
            android:visibility="gone"
            android:focusableInTouchMode="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/delete_text"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/delete_text"
            android:layout_width="30dp"
            android:src="@drawable/select_click"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_height="20dp" />
    </RelativeLayout>
</LinearLayout>